<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/score"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/value_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />

            <TextView
                android:id="@+id/value_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />

            <ImageView
                android:id="@+id/match_image_ok_or_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/scrollid"
            android:layout_width="400dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/match_img_0_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test10"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_0_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test2"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_0_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test1"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_1_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test10"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test2"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test1"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test2"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test1"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_2_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test10"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_3_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test12"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test11"
                    android:theme="@style/AppTheme" />

                <ImageButton
                    android:id="@+id/match_img_3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="3dp"
                    android:src="@drawable/image_test4"
                    android:theme="@style/AppTheme" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/match_but_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scrollid"
             />


        <Button
            android:id="@+id/match_but_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scrollid"
            android:layout_below="@id/match_but_0"
            />

        <Button
            android:id="@+id/match_but_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scrollid"
            android:layout_below="@id/match_but_1"
 />

        <Button
            android:id="@+id/match_but_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scrollid"
            android:layout_below="@id/match_but_2"
             />

        <Button
            android:id="@+id/match_but_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scrollid"
            android:layout_below="@id/match_but_3"
            android:text="@string/none_of_these" />



    </RelativeLayout>

</LinearLayout>
