<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_match_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/match_game"
                    android:textSize="45sp" />


                <ImageView
                    android:id="@+id/image_match"
                    android:layout_width="360dp"
                    android:layout_height="230dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/match" />

                <Button
                    android:id="@+id/match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/match_game"
                    android:textSize="45sp" />

                <Button
                    android:id="@+id/how_to_play_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_play"
                    android:textSize="45sp" />

                <Button
                    android:id="@+id/ranking_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ranking"
                    android:textSize="45sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_difference_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/difference_game"
                    android:textSize="45sp" />


                <ImageView
                    android:id="@+id/image_diff"
                    android:layout_width="360dp"
                    android:layout_height="230dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/diff" />


                <Button
                    android:id="@+id/difference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/difference_game"
                    android:textSize="45sp" />

                <Button
                    android:id="@+id/how_to_play_difference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_play"
                    android:textSize="45sp" />

                <Button
                    android:id="@+id/ranking_difference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ranking"
                    android:textSize="45sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_jump_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp"
                    android:text="@string/jump_game" />


                <ImageView
                    android:id="@+id/image_jump"
                    android:layout_width="360dp"
                    android:layout_height="230dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/jump" />

                <Button
                    android:id="@+id/jump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp"
                    android:text="@string/jump_game" />

                <Button
                    android:id="@+id/how_to_play_jump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp"
                    android:text="@string/how_to_play" />

                <Button
                    android:id="@+id/ranking_jump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp"
                    android:text="@string/ranking" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>