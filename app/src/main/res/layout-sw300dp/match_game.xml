<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/score"
                android:textAlignment="viewEnd"
                app:autoSizeTextType="uniform"
                app:autoSizePresetSizes="@array/autoSize_300" />

            <TextView
                android:id="@+id/value_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zero"
                app:autoSizeTextType="uniform"
                app:autoSizePresetSizes="@array/autoSize_300" />

            <ImageView
                android:id="@+id/stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:cropToPadding="true"
                android:src="@android:drawable/btn_star_big_on" />


            <TextView
                android:id="@+id/value_lives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zero"
                app:autoSizeTextType="uniform"
                app:autoSizePresetSizes="@array/autoSize_300" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/scrollid"
            android:layout_width="230dp"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/view_match_container_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/match_but_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/scrollid"
            android:minHeight="42dip"
            app:autoSizeTextType="uniform"
            app:autoSizePresetSizes="@array/autoSize_300" />


        <Button
            android:id="@+id/match_but_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/scrollid"
            android:layout_below="@id/match_but_0"
            android:minHeight="42dip"
            app:autoSizeTextType="uniform"
            app:autoSizePresetSizes="@array/autoSize_300"
            />

        <Button
            android:id="@+id/match_but_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/scrollid"
            android:layout_below="@id/match_but_1"
            android:minHeight="42dip"
            app:autoSizeTextType="uniform"
            app:autoSizePresetSizes="@array/autoSize_300"
 />

        <Button
            android:id="@+id/match_but_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/scrollid"
            android:layout_below="@id/match_but_2"
            android:minHeight="42dip"
            app:autoSizeTextType="uniform"
            app:autoSizePresetSizes="@array/autoSize_300"
             />

        <Button
            android:id="@+id/match_but_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/scrollid"
            android:layout_below="@id/match_but_3"
            android:minHeight="42dip"
            app:autoSizeTextType="uniform"
            app:autoSizePresetSizes="@array/autoSize_300"
            android:text="@string/none_of_these" />



    </RelativeLayout>

</LinearLayout>
